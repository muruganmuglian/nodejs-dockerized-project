pipeline {
    agent any
    stages{
        stage("checkout"){
            steps{
                checkout scm
            }
        }

        stage("Test"){
            steps{
                bat ' install npm'
                bat 'npm test'
            }
        }

        stage("Build"){
            steps{
                bat 'npm run build'
            }
        }
 stage("Build image"){
            steps{
                bat 'docker build - my-node-app:1.0 .'
            }
        }
}
}
